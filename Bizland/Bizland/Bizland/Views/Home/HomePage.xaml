<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:googleMaps="clr-namespace:Xamarin.Forms.GoogleMaps;assembly=Xamarin.Forms.GoogleMaps"
             xmlns:bindings="clr-namespace:Xamarin.Forms.GoogleMaps.Bindings;assembly=Xamarin.Forms.GoogleMaps.Bindings"
             xmlns:controls="clr-namespace:Bizland.CustomControl;assembly=Bizland" 
             Title="{Binding Title}"
             x:Class="Bizland.Views.HomePage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Name="Thông Báo" Priority="2" x:Name="btnNotification" Command="{Binding clickaleart}"  Icon="ic_notification.png" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <googleMaps:Map x:Name="map"
                            Grid.RowSpan="2"
                            HorizontalOptions="Fill"
                            VerticalOptions="FillAndExpand"
                            IsShowingUser="True"
                            HasRotationEnabled="True"
                            MapType="Street"
                            MyLocationEnabled="True"
                            HasScrollEnabled="True"
                            IsIndoorEnabled="True"
                            IsTrafficEnabled="False"
                            HasZoomEnabled="True">
                <googleMaps:Map.Behaviors>
                    <bindings:BindingPinsBehavior Value="{Binding Pins}"/>
                    <bindings:PinClickedToCommandBehavior Command="{Binding PinSelectedCommand}"/>
                    <bindings:AnimateCameraBehavior Request="{Binding AnimateCameraRequest}"/>
                </googleMaps:Map.Behaviors>
            </googleMaps:Map>

            <!--Control Filter EndAddress-->
            <controls:MaterialFrame BackgroundColor="#ffffff"
                                    Grid.Row="0"
                                    Margin="10"
                                    HasShadow="False"
                                    Padding="5">
                <controls:MaterialFrame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding PushToSelectAddress}"/>
                </controls:MaterialFrame.GestureRecognizers>
                <Grid RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="25"/>
                    </Grid.ColumnDefinitions>

                    <controls:IconView  Foreground="{StaticResource Color_Button}"
                                        WidthRequest="15"
                                        Grid.RowSpan="2"
                                        Grid.Column="0" 
                                        Source="ic_location.png"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center" />

                    <Label TextColor="{StaticResource Color_Button}"
                           Grid.Column="1"
                           Grid.Row="0"
                           FontSize="12"
                           LineBreakMode="TailTruncation"
                           Text="Bạn cần tìm phòng ở đâu ?"              
                           VerticalOptions="CenterAndExpand"             
                           HorizontalOptions="FillAndExpand" />

                    <Label TextColor="#404040"
                           Grid.Column="1"
                           Grid.Row="1"
                           LineBreakMode="TailTruncation"
                           Text="{Binding MyAddress}"
                           VerticalOptions="CenterAndExpand" 
                           HorizontalOptions="FillAndExpand" />

                    <controls:IconView Grid.Column="2"
                                        Foreground="{StaticResource Color_Button}"
                                        WidthRequest="15"
                                        Grid.RowSpan="2"
                                        Source="ic_Search.png"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center" />
                </Grid>
            </controls:MaterialFrame>




            <!--Control Filter Search Car-->
            <controls:MaterialFrame BackgroundColor="#ffffff"
                                    Grid.Row="2"
                                    VerticalOptions="End"
                                    Padding="0"
                                    CornerRadius="0"
                                    HasShadow="True">
                <StackLayout Orientation="Vertical" Spacing="0">
                    <controls:HorizontalList ListOrientation="Horizontal" 
                                             Padding="0"
                                             Margin="0,10,0,10"
                                             Spacing="10"
                                             ItemsSource="{Binding ListRoomType}"
                                             HorizontalOptions="FillAndExpand"
                                             VerticalOptions="FillAndExpand"
                                             SelectedCommand="{Binding SelectedItemCommand}">
                        <controls:HorizontalList.ItemTemplate>
                            <DataTemplate>
                                <Grid HorizontalOptions="CenterAndExpand" VerticalOptions="EndAndExpand">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Image Source="{Binding ImageIcon}" Grid.Row="0" Opacity="{Binding Selected}" HorizontalOptions="Center" VerticalOptions="End" WidthRequest="40"/>
                                    <Label Text="{Binding RoomTypeName}"
                                           Opacity="{Binding Selected}"
                                           Grid.Row="1"
                                           VerticalOptions="End"
                                           VerticalTextAlignment="End"
                                           HorizontalOptions="CenterAndExpand"
                                           HorizontalTextAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </controls:HorizontalList.ItemTemplate>
                    </controls:HorizontalList>

                    <!--<Button HeightRequest="50"
                        Text="TÌM PHÒNG"
                        FontAttributes="Bold"
                        Command="{Binding SearchVehicleFilterModel}">
                        <Button.Image>
                            <OnPlatform x:TypeArguments="FileImageSource"
                                 iOS="ic_search_home.png"        
                                  />
                        </Button.Image>
                    </Button>-->

                </StackLayout>
            </controls:MaterialFrame>

            <controls:FloatingActionButton 
                            Grid.RowSpan="2"
                            HorizontalOptions="End"
                            WidthRequest="45"
                            HeightRequest="45"
                            VerticalOptions="End"
                            Margin="10"
                            Command="{Binding getMylocation}"
                            Image="ic_maplocation.png"
                            BackgroundColor="Transparent"
                            ButtonColor="White">
                <controls:FloatingActionButton.IsVisible>
                    <OnPlatform x:TypeArguments="x:Boolean">
                        <On Platform="iOS" Value="false" />
                        <On Platform="Android" Value="true" />
                    </OnPlatform>
                </controls:FloatingActionButton.IsVisible>
            </controls:FloatingActionButton>
        </Grid>
    </ContentPage.Content>
</ContentPage>